@model IEnumerable<Caching.Models.Drug>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Caching!";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Drug Name
            </th>
            <th>
                Drug Price
            </th>
            <th>
                Drug NDC
            </th>
            <th>
                Pack Size
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.drugName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.drugPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.drugNdc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.packSize)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>