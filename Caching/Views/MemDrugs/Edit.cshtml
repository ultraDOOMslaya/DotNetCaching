@model Caching.Models.Drug
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Drug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="drugName" class="control-label"></label>
                <input asp-for="drugName" class="form-control" />
                <span asp-validation-for="drugName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="drugPrice" class="control-label"></label>
                <input asp-for="drugPrice" class="form-control" />
                <span asp-validation-for="drugPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="drugNdc" class="control-label"></label>
                <input asp-for="drugNdc" class="form-control" />
                <span asp-validation-for="drugNdc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="packSize" class="control-label"></label>
                <input asp-for="packSize" class="form-control" />
                <span asp-validation-for="packSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}